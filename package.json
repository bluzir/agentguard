{
  "name": "agentradius",
  "version": "0.5.0",
  "description": "Framework-agnostic security layer for AI agent orchestrators",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agentradius": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters/*": {
      "import": "./dist/adapters/*.js",
      "types": "./dist/adapters/*.d.ts"
    }
  },
  "files": [
    "dist",
    "examples",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "agent",
    "security",
    "guardrails",
    "mcp",
    "orchestrator",
    "llm",
    "tool-use",
    "sandbox",
    "radius"
  ],
  "author": "bluzir",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluzir/radius.git"
  },
  "bugs": {
    "url": "https://github.com/bluzir/radius/issues"
  },
  "homepage": "https://github.com/bluzir/radius#readme",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  }
}
